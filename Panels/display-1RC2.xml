<?xml version="1.0"?>
<!--== Bluebird Explorer Hovercraft  version 13.5  ==-->

<PropertyList>
	<name>screen messages text 1RC1</name>
	<background>Aircraft/Generic/Panels/Textures/transparent-bg.rgb</background>
	<w>512</w>
	<h>512</h>
	<instruments>
		<instrument>
			<name>2d Panel 1RC1</name>
			<condition>
				<and>
					<property>sim/model/bluebird/systems/power-switch</property>
					<property>instrumentation/comm[1]/power-btn</property>
					<equals>
						<property>sim/current-view/view-number</property>
						<value>0</value>
					</equals>
					<less-than>
						<property>sim/current-view/z-offset-m</property>
						<value>-1.7</value>
					</less-than>
					<greater-than>
						<property>sim/current-view/x-offset-m</property>
						<value>-1.35</value>
					</greater-than>
					<less-than>
						<property>sim/current-view/x-offset-m</property>
						<value>1.06</value>
					</less-than>
					<not>
						<equals>
							<property>sim/model/bluebird/crew/cockpit-position</property>
							<value>2</value>
						</equals>
					</not>
				</and>
			</condition>
			<w-base>512</w-base>
			<h-base>512</h-base>
			<x>256</x>
			<y>256</y>
			<w>512</w>
			<h>512</h>
			<layers>
				<layer>
					<name>comm1 line 27a yellow</name>
					<type>text</type>
					<font>arial_black</font>
					<point-size>18</point-size>
					<color>
						<red>1</red>
						<green>1</green>
						<blue>0</blue>
					</color>
					<chunks>
						<chunk>
							<type>text-value</type>
							<property>instrumentation/comm[1]/airport-id</property>
						</chunk>
					</chunks>
					<transformations>
						<transformation>
							<type>x-shift</type>
							<offset>-145</offset>
						</transformation>
						<transformation>
							<type>y-shift</type>
							<offset>-200</offset>
						</transformation>
					</transformations>
				</layer>

				<layer>
					<name>comm1 line 27b yellow</name>
					<type>text</type>
					<font>arial_black</font>
					<point-size>14</point-size>
					<color>
						<red>1</red>
						<green>1</green>
						<blue>0</blue>
					</color>
					<chunks>
						<chunk>
							<type>text-value</type>
							<property>instrumentation/comm[1]/station-type</property>
						</chunk>
					</chunks>
					<transformations>
						<transformation>
							<type>x-shift</type>
							<offset>0</offset>
						</transformation>
						<transformation>
							<type>y-shift</type>
							<offset>-200</offset>
						</transformation>
					</transformations>
				</layer>

				<layer>
					<name>airport line 28a white</name>
					<type>text</type>
					<font>arial_black</font>
					<point-size>16</point-size>
					<color>
						<red>1</red>
						<green>1</green>
						<blue>1</blue>
					</color>
					<chunks>
						<chunk>
							<type>literal</type>
							<text>HEADING</text>
						</chunk>
					</chunks>
					<transformations>
						<transformation>
							<type>x-shift</type>
							<offset>-230</offset>
						</transformation>
						<transformation>
							<type>y-shift</type>
							<offset>-218</offset>
						</transformation>
					</transformations>
				</layer>

				<layer>
					<name>airport line 28b white</name>
					<type>text</type>
					<font>arial_black</font>
					<point-size>16</point-size>
					<color>
						<red>1</red>
						<green>1</green>
						<blue>1</blue>
					</color>
					<chunks>
						<chunk>
							<type>literal</type>
							<text>RANGE</text>
						</chunk>
					</chunks>
					<transformations>
						<transformation>
							<type>x-shift</type>
							<offset>-4</offset>
						</transformation>
						<transformation>
							<type>y-shift</type>
							<offset>-218</offset>
						</transformation>
					</transformations>
				</layer>

				<layer>
					<name>airport line 28a yellow</name>
					<type>text</type>
					<font>arial_black</font>
					<point-size>16</point-size>
					<color>
						<red>1</red>
						<green>1</green>
						<blue>0</blue>
					</color>
					<chunks>
						<chunk>
							<type>number-value</type>
							<property>instrumentation/comm[1]/true-bearing-to-deg</property>
							<format>%3.0f</format>
						</chunk>
					</chunks>
					<transformations>
						<transformation>
							<type>x-shift</type>
							<offset>-100</offset>
						</transformation>
						<transformation>
							<type>y-shift</type>
							<offset>-218</offset>
						</transformation>
					</transformations>
				</layer>

				<layer>
					<name>airport line 28b yellow</name>
					<type>text</type>
					<font>arial_black</font>
					<point-size>16</point-size>
					<color>
						<red>1</red>
						<green>1</green>
						<blue>0</blue>
					</color>
					<chunks>
						<chunk>
							<type>text-value</type>
							<property>instrumentation/tracking/comm1-range</property>
						</chunk>
					</chunks>
					<transformations>
						<transformation>
							<type>x-shift</type>
							<offset>96</offset>
						</transformation>
						<transformation>
							<type>y-shift</type>
							<offset>-218</offset>
						</transformation>
					</transformations>
				</layer>

			</layers>
		</instrument>
	</instruments>
</PropertyList>
