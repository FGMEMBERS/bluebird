<?xml version="1.0"?>

<PropertyList include="bluebird-base.xml">

 <sim>
	<description>Bluebird Explorer for v.0.9.10</description>
	<model>
		<path>Aircraft/bluebird/Models/bluebird-plib.xml</path>
		<bluebird>
			<crew>
				<pilot>
					<visible type="bool">false</visible>
				</pilot>
				<walker>
					<visible type="bool">false</visible>
				</walker>
			</crew>
		</bluebird>
	</model>

	<help>
		<key n="20">
			<name>W / S</name>
			<desc>Walk Forward/Backward</desc>
		</key>
	</help>

	<menubar>
		<default>
			<menu n="10">
				<label>Bluebird</label>
				<enabled type="bool">true</enabled>
				<item>
					<label>Systems                 [Tab]</label>
					<binding>
						<command>nasal</command>
						<script>bluebird.showDialog1()</script>
					</binding>
				</item>
				<item>
					<label>Preferences Configuration</label>
					<binding>
						<command>nasal</command>
						<script>bluebird.showDialog2()</script>
					</binding>
				</item>
			</menu>
		</default>
	</menubar>

	<submodels>
		<serviceable>true</serviceable>
		<path>Aircraft/bluebird/Models/submodels-09.xml</path>
	</submodels>
 </sim>

 <input>
	<keyboard>
		<key n="119"> 
			<name>w</name>
			<desc>Walk forward</desc>
			<binding>
				<command>property-assign</command>
				<property>sim/walker/key-triggers/forward</property>
				<value>1</value>
			</binding>
			<mod-up>
				<binding>
					<command>property-assign</command>
					<property>sim/walker/key-triggers/forward</property>
					<value>0</value>
				</binding>
			</mod-up>
		</key>
		<key n="87"> 
			<name>W</name>
			<desc>Walk forward</desc>
			<binding>
				<command>property-assign</command>
				<property>sim/walker/key-triggers/forward</property>
				<value>1</value>
			</binding>
			<mod-up>
				<binding>
					<command>property-assign</command>
					<property>sim/walker/key-triggers/forward</property>
					<value>0</value>
				</binding>
			</mod-up>
		</key>
		<key n="83"> 
			<name>S</name>
			<desc>Walk backwards</desc>
			<binding>
				<command>property-assign</command>
				<property>sim/walker/key-triggers/forward</property>
				<value>-1</value>
			</binding>
			<mod-up>
				<binding>
					<command>property-assign</command>
					<property>sim/walker/key-triggers/forward</property>
					<value>0</value>
				</binding>
			</mod-up>
		</key>
	</keyboard>
 </input>

 <nasal>
	<bluebird>
		<file>Aircraft/bluebird/Nasal/bluebird-base.nas</file>
		<file>Aircraft/bluebird/Nasal/bluebird-09.nas</file>
	</bluebird>
	<digitalPanel>
		<file>Aircraft/bluebird/Instruments-3d/digital2/digital2.nas</file>
	</digitalPanel>
	<displayScreens>
		<file>Aircraft/bluebird/Nasal/displays-common.nas</file>
	</displayScreens>
	<walk>
		<file>Aircraft/bluebird/Nasal/walk-09.nas</file>
	</walk>
 </nasal>
</PropertyList>
