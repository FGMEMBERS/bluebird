 <animation>
	<type>pick</type>
	<object-name>altitude.button</object-name>
	<action>
		<name>altitude-mode-select</name>
		<button>0</button>
		<repeatable>false</repeatable>
		<binding>
			<command>nasal</command>
			<script>
				var node = props.globals.getNode("instrumentation/digital/altitude-mode", 1);
				var nm = node.getValue();
				var cpl = getprop("engines/engine/speed-max-powerlevel");
				var maxu = (cpl > 7 ? 3 : 1);
				nm = (nm + 1 > maxu? 0: nm+1);
				node.setValue( nm );
			</script>
		</binding>
	</action>
	<hovered>
		<binding>
			<command>set-tooltip</command>
			<tooltip-id>altitude-mode-tip</tooltip-id>
			<label>Select units for altitude display: %s</label>
			<mapping>nasal</mapping>
				<script>
				  var modes = ['FEET', 'METERs', 'KM', 'MILEs'];
				  return sprintf("\nCurrent mode: %s\nAvailable options: Feet,  Meters,  Km, Miles",modes[arg[0]]);
				</script>
			<property>instrumentation/digital/altitude-mode</property>
		</binding>
	</hovered>
 </animation>

