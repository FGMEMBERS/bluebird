		</offsets>
	</model>

	<animation>
		<type>select</type>
		<object-name>walker-inside</object-name>
		<condition>
			<and>
				<property>sim/model/bluebird/crew/walker/visible</property>
				<greater-than>
					<property>sim/current-view/view-number</property>
					<value>0</value>
				</greater-than>
				<not>
					<property>sim/walker/outside</property>
				</not>
				<or>
					<equals>
						<property>sim/model/bluebird/crew/cockpit-position</property>
						<value>1</value>
					</equals>
					<equals>
						<property>sim/model/bluebird/crew/cockpit-position</property>
						<value>4</value>
					</equals>
				</or>
			</and>
		</condition>
	</animation>

