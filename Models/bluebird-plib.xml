			<property>sim/model/bluebird/crew/pilot/visible</property>
		</condition>
	</animation>

	<animation>
		<type>select</type>
		<object-name>head</object-name>
		<condition>
			<or>
				<greater-than>
					<property>sim/current-view/view-number</property>
					<value>0</value>
				</greater-than>
				<greater-than>
					<property>sim/model/bluebird/crew/cockpit-position</property>
					<value>0</value>
				</greater-than>
			</or>
		</condition>
	</animation>

