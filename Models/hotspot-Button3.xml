<?xml version="1.0"?>
<!--== Bluebird Explorer Hovercraft  version 4.3 ==-->

<!DOCTYPE PropertyList SYSTEM "panel.dtd">
<PropertyList> 
	<name>Door3 Buttons</name>
	<background>Aircraft/Generic/Panels/Textures/transparent-bg.rgb</background>
	<w>1024</w>
	<h>1024</h>
	<y-offset>0</y-offset>
	<instruments>
		<instrument>
			<name>button3</name>
			<x>512</x>
			<y>512</y>
			<w>1024</w>
			<h>1024</h>
			<w-base>1024</w-base>
			<h-base>1024</h-base>
			<layers> 
				<layer> 
					<name>background</name>
					<texture> 
						<path>Aircraft/Generic/Panels/Textures/transparent-bg.rgb</path>
						<x1>0.0</x1>
						<y1>0.0</y1>
						<x2>1.0</x2>
						<y2>1.0</y2>
					</texture>
				</layer>
			</layers>
			<!-- define hotspot actions below -->
			<actions> 
				<action>
					<name>toggle-door3</name>
					<button>0</button>
					<x>-512</x>
					<y>-512</y>
					<w>1024</w>
					<h>1024</h>
					<repeatable>false</repeatable>
					<binding>
						<command>nasal</command>
						<script>bluebird.select_door(3)</script>
					</binding>
					<binding>
						<command>nasal</command>
						<script>bluebird.toggle_door()</script>
					</binding>
				</action>
			</actions>
		</instrument>
	</instruments>
</PropertyList>
